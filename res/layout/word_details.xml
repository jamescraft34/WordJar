<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@drawable/rounded_edges" 
    android:layout_gravity="center"
    android:padding="2dp" android:layout_margin="20dp">

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@drawable/rounded_outline" 
    android:layout_gravity="center">
    
    
    <LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" 
	    android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageViewWordType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/approved" 
            android:layout_gravity="left"
            android:padding="4dp"/>

        <TextView
	        android:id="@+id/textViewWord"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="WordJar"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:layout_gravity="center"
	        android:textColor="@color/base_black"
	        android:layout_weight="1" android:gravity="center"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/approved" 
            android:padding="4dp" android:visibility="invisible"/>
    
        	    
    </LinearLayout>
    
    <View        
        android:layout_width="wrap_content"        
        android:background="@drawable/worddialog_gradient"        
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal">
    </View>
    
    <EditText
        android:id="@+id/editTextDefinition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" 
        android:lines="2" 
        android:hint="Notes..."
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:scrollbars="vertical" 
        android:gravity="top|left" 
        android:layout_margin="5dp"
        android:maxLength="350"
        android:background="@drawable/editview_outline" 
        android:paddingLeft="5dp" android:paddingRight="5dp">

    </EditText>
    
    <LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" 
	    android:layout_gravity="left" android:layout_marginLeft="25dp" android:layout_marginRight="25dp">
        
    
        
        <LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" 
	    android:layout_gravity="left"
	    android:layout_marginBottom="5dp" >
     
           <com.craftysoft.wordjar.CustomFontTextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Total Count - "/>
	    
             <com.craftysoft.wordjar.CustomFontTextView
	        android:id="@+id/textViewTotalCount"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="0"/>
      
        <com.craftysoft.wordjar.CustomFontTextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Since: "
	        android:layout_marginLeft="35dp"/>
	    
	    <com.craftysoft.wordjar.CustomFontTextView
	        android:id="@+id/textViewSince"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="-/-/-"/>
             
	    
    </LinearLayout>

            	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" 
	    android:layout_gravity="left">

        
	    <com.craftysoft.wordjar.CustomFontTextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Today's Count - "/>
	    
	    <com.craftysoft.wordjar.CustomFontTextView
	        android:id="@+id/textViewTodaysCount"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="0"/>

	    
	    	    <com.craftysoft.wordjar.CustomFontTextView
	        android:id="@+id/textViewDailyGoal"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Daily Goal - "
	        android:layout_marginLeft="24dp"/>

	    <EditText
	        android:id="@+id/editTextDailyGoal"
	        android:layout_width="wrap_content"
	        android:ems="3"
	        android:layout_height="wrap_content"
	        android:hint="0" 
	        android:inputType="number" 
	        android:maxLength="3"
	        android:background="@drawable/editview_outline"
			android:paddingLeft="5dp" android:paddingRight="5dp">
	    </EditText>
	    
	    
    </LinearLayout>
            
        
        
