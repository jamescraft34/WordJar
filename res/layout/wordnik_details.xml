<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@drawable/rounded_edges" 
    android:layout_gravity="center"
    android:padding="2dp"
    android:layout_margin="20dp">

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@drawable/rounded_outline" 
    android:layout_gravity="center">
    
    

        
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="horizontal" 
	    android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wordnik_logo" 
            android:layout_gravity="left"
            android:padding="2dp"/>

        <TextView
	        android:id="@+id/textViewWordNikWord"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="WordJar"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:layout_gravity="center"
	        android:textColor="@color/base_black"
	        android:layout_weight="1" android:gravity="center"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_tab_dictionary_white" 
            android:padding="2dp" android:visibility="invisible"/>
    
        	    
    </LinearLayout>
    
    <View        
        android:layout_width="wrap_content"        
        android:background="@drawable/worddialog_gradient"        
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal">
    </View>

	    <TextView
	        android:id="@+id/textViewDef"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal" 
	        android:lines="3"
	         
	        android:scrollbars="vertical" 
	        android:gravity="top|left" 
	        android:layout_margin="5dp"
	        android:maxLength="350"
	        android:background="@drawable/editview_outline" 
	        android:paddingLeft="5dp" android:paddingRight="5dp" android:maxLines="3"/>        

	    
	    
	    
	    
	    
	        <LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_gravity="center_horizontal" android:layout_marginTop="4dp" android:layout_marginLeft="2dp" android:layout_marginRight="2dp">    
        
	    <Button
	        android:id="@+id/buttonSave"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Add" 
	        android:layout_weight="1"
	        android:clickable="true"/>
	    
	     <Button
	        android:id="@+id/buttonCancel"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Cancel" 
	        android:layout_weight="1" 
	        android:clickable="true"/>

     </LinearLayout>
	    
	</LinearLayout>
        
</LinearLayout>
